<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/annual_plan_item"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/item_year"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="培训年度"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_year"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编写人"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/item_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编写时间"/>

        </LinearLayout>

        <TextView
            android:id="@+id/item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/item_year"
            android:layout_alignBottom="@+id/item_year"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="23dp"
            android:textColor="@color/blue"
            android:text="批准状态" />

    </RelativeLayout>
</LinearLayout>