<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/period_listitem"
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <LinearLayout
            android:id="@+id/author_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_object"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="核查对象：    "
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/item_object"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="核查对象"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/date_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/author_layout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_chargePerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="核查负责人："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_chargePerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="核查负责人"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_situation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="状态"
            android:textSize="18sp"
            android:textColor="@color/dodgerblue"/>
    </RelativeLayout>
</LinearLayout>