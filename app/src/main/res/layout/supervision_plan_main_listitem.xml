<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/supervision_main_listitem"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="监督内容："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/object_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_layout"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="监督对象："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_object"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="无"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dateFrequency_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/content_layout"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_dateFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间/频率："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_dateFrequency"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="无"
            android:textColor="@color/dodgerblue"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
